@page "/departments/delete"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Department</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <!-- Loading State -->
            @if (department is null)
            {
                <div class="d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="spinner-border text-danger mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="text-muted">Loading department data...</span>
                </div>
            }
            else
            {
                <!-- Header Section -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="fw-bold text-danger mb-0">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Department
                        </h2>
                        <p class="text-muted mb-0">This action is permanent and cannot be undone.</p>
                    </div>
                    <a href="/departments" class="btn btn-outline-secondary rounded-pill px-3">
                        <i class="bi bi-arrow-left me-1"></i> Back
                    </a>
                </div>

                <!-- Delete Confirmation Card -->
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <!-- Red strip on top for warning -->
                    <div class="bg-danger h-1"></div>

                    <div class="card-body p-4 p-md-5 text-center position-relative">

                        <!-- Decorative Background Icon -->
                        <div class="position-absolute top-50 start-50 translate-middle opacity-10" style="z-index: 0;">
                            <i class="bi bi-building-fill-x text-danger" style="font-size: 10rem;"></i>
                        </div>

                        <div class="position-relative" style="z-index: 1;">

                            <h5 class="text-uppercase text-secondary fw-bold small mb-4">You are about to delete:</h5>

                            <!-- Department Info Box -->
                            <div class="bg-light rounded-4 p-4 mb-4 border border-danger border-opacity-10 shadow-sm">
                                <div class="mb-3">
                                    <div class="d-inline-flex align-items-center justify-content-center bg-white text-danger rounded-circle p-3 shadow-sm">
                                        <i class="bi bi-buildings-fill fs-2"></i>
                                    </div>
                                </div>
                                <h3 class="fw-bold text-dark mb-1">@department.Name</h3>
                                <span class="badge bg-white text-secondary border rounded-pill px-3 mt-2">
                                    ID: @department.Id
                                </span>
                            </div>

                            <!-- Action Buttons -->
                            <EditForm method="post" Model="department" OnValidSubmit="DeleteDepartment" FormName="delete" Enhance>
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-gradient-danger btn-lg rounded-pill shadow-sm fw-bold">
                                        <i class="bi bi-trash3-fill me-2"></i>Confirm Delete
                                    </button>

                                    <a href="/departments" class="btn btn-link text-decoration-none text-secondary fw-bold mt-2">
                                        Cancel
                                    </a>
                                </div>
                            </EditForm>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-danger.h-1 {
        height: 6px;
    }

    .opacity-10 {
        opacity: 0.05;
    }

    /* Gradient Danger Button */
    .btn-gradient-danger {
        background: linear-gradient(45deg, #e74a3b, #c0392b);
        border: none;
        color: white;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-gradient-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(231, 74, 59, 0.4);
            color: white;
        }
</style>

@code {
    private Department? department;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        department = await context.Departments.FirstOrDefaultAsync(m => m.Id == Id);

        if (department is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteDepartment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Departments.Remove(department!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/departments");
    }
}