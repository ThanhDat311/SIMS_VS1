@page "/users/edit"
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using Microsoft.Extensions.Logging
@using SIMS.Data
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject NavigationManager NavigationManager

<PageTitle>Edit User</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-primary mb-0">
                        <i class="bi bi-person-gear me-2"></i>Edit User
                    </h2>
                    <p class="text-muted mb-0">Update account information and permissions.</p>
                </div>
                <a href="/users" class="btn btn-outline-secondary rounded-pill px-3">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>

            <!-- Loading State -->
            @if (User is null)
            {
                <div class="d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="text-muted">Loading user data...</span>
                </div>
            }
            else
            {
                <!-- Form Card -->
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4 p-md-5">

                        <EditForm Model="User" OnValidSubmit="SaveUser" FormName="edit-user" method="post" Enhance>
                            <DataAnnotationsValidator />

                            <!-- Validation Summary -->
                            <div class="mb-4">
                                <ValidationSummary class="text-danger alert alert-danger border-0 bg-soft-danger" role="alert" />
                            </div>

                            <input type="hidden" name="User.Id" value="@User?.Id" />

                            <div class="row g-3">
                                <!-- Email Field -->
                                <div class="col-12">
                                    <label class="form-label fw-bold text-secondary small">Email Address</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0 text-muted">
                                            <i class="bi bi-envelope"></i>
                                        </span>
                                        <InputText @bind-Value="User.Email" class="form-control form-control-lg bg-light border-start-0" placeholder="name@example.com" />
                                    </div>
                                    <ValidationMessage For="() => User.Email" class="text-danger small mt-1" />
                                </div>

                                <!-- Full Name -->
                                <div class="col-12">
                                    <label class="form-label fw-bold text-secondary small">Full Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0 text-muted">
                                            <i class="bi bi-person"></i>
                                        </span>
                                        <InputText @bind-Value="User.Name" class="form-control form-control-lg bg-light border-start-0" placeholder="Full name" />
                                    </div>
                                    <ValidationMessage For="() => User.Name" class="text-danger small mt-1" />
                                </div>

                                <!-- Student ID -->
                                <div class="col-md-6">
                                    <label class="form-label fw-bold text-secondary small">Student ID</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0 text-muted">
                                            <i class="bi bi-card-heading"></i>
                                        </span>
                                        <InputText @bind-Value="User.StudentId" class="form-control form-control-lg bg-light border-start-0 font-monospace" placeholder="Student Id" />
                                    </div>
                                    <ValidationMessage For="() => User.StudentId" class="text-danger small mt-1" />
                                </div>

                                <!-- Role Selection -->
                                <div class="col-md-6">
                                    <label class="form-label fw-bold text-secondary small">User Role</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0 text-muted">
                                            <i class="bi bi-shield-lock"></i>
                                        </span>
                                        <InputSelect @bind-Value="SelectedRole" class="form-select form-select-lg bg-light border-start-0" name="SelectedRole">
                                            <option value="">-- No Role --</option>
                                            @foreach (var r in Roles)
                                            {
                                                <option value="@r">@r</option>
                                            }
                                        </InputSelect>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-end gap-2 mt-5">
                                <a href="/users" class="btn btn-light btn-lg px-4 rounded-pill">Cancel</a>
                                <button type="submit" class="btn btn-gradient-primary btn-lg px-4 rounded-pill shadow-sm">
                                    <i class="bi bi-check-circle-fill me-2"></i>Save Changes
                                </button>
                            </div>

                        </EditForm>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@code {
    [SupplyParameterFromQuery]
    public string Id { get; set; } = "";

    [SupplyParameterFromForm]
    private ApplicationUser? User { get; set; }

    [SupplyParameterFromForm]
    private string SelectedRole { get; set; } = "";

    private List<string> Roles { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        Roles = await RoleManager.Roles.Select(r => r.Name!).ToListAsync();

        if (!string.IsNullOrEmpty(Id) && User is null)
        {
            User = await UserManager.FindByIdAsync(Id);
            if (User is null)
            {
                NavigationManager.NavigateTo("notfound");
                return;
            }

            var userRoles = await UserManager.GetRolesAsync(User);
            SelectedRole = userRoles.FirstOrDefault() ?? "";
        }
    }

    private async Task SaveUser()
    {
        if (User is null) return;

        var userToUpdate = await UserManager.FindByIdAsync(User.Id);
        if (userToUpdate is null)
        {
            NavigationManager.NavigateTo("/users");
            return;
        }

        userToUpdate.Email = User.Email;
        userToUpdate.UserName = User.Email; // Keep username synced with email
        userToUpdate.Name = User.Name;
        userToUpdate.StudentId = User.StudentId;

        var updateResult = await UserManager.UpdateAsync(userToUpdate);
        if (!updateResult.Succeeded)
        {
            // Ideally handle errors here, e.g. adding to ValidationMessage
            return;
        }

        // Update Roles
        var currentRoles = await UserManager.GetRolesAsync(userToUpdate);
        if (currentRoles.Any())
        {
            await UserManager.RemoveFromRolesAsync(userToUpdate, currentRoles);
        }

        if (!string.IsNullOrEmpty(SelectedRole))
        {
            await UserManager.AddToRoleAsync(userToUpdate, SelectedRole);
        }

        NavigationManager.NavigateTo("/users");
    }
}