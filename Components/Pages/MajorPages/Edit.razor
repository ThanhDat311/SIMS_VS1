@page "/majors/edit"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Major</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-7">

            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-primary mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Edit Major
                    </h2>
                    <p class="text-muted mb-0">Update major details and department assignment.</p>
                </div>
                <a href="/majors" class="btn btn-outline-secondary rounded-pill px-3">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>

            <!-- Loading State -->
            @if (Major is null)
            {
                <div class="d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="text-muted">Loading major data...</span>
                </div>
            }
            else
            {
                <!-- Form Card -->
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4 p-md-5">

                        <EditForm method="post" Model="Major" OnValidSubmit="UpdateMajor" FormName="edit" Enhance>
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <ValidationSummary class="text-danger alert alert-danger border-0 bg-soft-danger" role="alert" />
                            </div>

                            <input type="hidden" name="Major.Id" value="@Major.Id" />

                            <!-- Major Name Field -->
                            <div class="mb-4">
                                <label for="name" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-tag-fill me-1"></i>Major Name
                                </label>
                                <InputText id="name"
                                           @bind-Value="Major.Name"
                                           class="form-control form-control-lg"
                                           placeholder="e.g. Software Engineering" />
                                <ValidationMessage For="() => Major.Name" class="text-danger small mt-1" />
                            </div>

                            <!-- Department Select Field -->
                            <div class="mb-4">
                                <label for="departmentid" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-buildings-fill me-1"></i>Department
                                </label>

                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <InputSelect id="departmentid"
                                                 @bind-Value="Major.DepartmentId"
                                                 class="form-select form-select-lg border-start-0 ps-0">
                                        <option value="">-- Select Department --</option>
                                        @foreach (var department in Departments)
                                        {
                                            <option value="@department.Id">@department.Name</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="form-text text-muted small mt-1">
                                    Select the department that manages this major.
                                </div>
                                <ValidationMessage For="() => Major.DepartmentId" class="text-danger small mt-1" />
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="/majors" class="btn btn-light btn-lg px-4 rounded-pill">Cancel</a>

                                <button type="submit" class="btn btn-gradient-primary btn-lg px-4 rounded-pill shadow-sm">
                                    <i class="bi bi-save me-2"></i>Save Changes
                                </button>
                            </div>

                        </EditForm>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<style>
    /* Custom Select Styling to match input group icons */
    .input-group-text {
        background-color: #fff;
        border-color: #dee2e6;
    }

    .form-select-lg {
        font-size: 1rem;
        padding-top: 0.75rem;
        padding-bottom: 0.75rem;
    }

    /* Focus states */
    .input-group:focus-within .input-group-text {
        border-color: #86b7fe;
    }

    .input-group:focus-within .form-select {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .bg-soft-danger {
        background-color: rgba(220, 53, 69, 0.1);
    }

    /* Button Gradient */
    .btn-gradient-primary {
        background: linear-gradient(45deg, #4e73df, #224abe);
        color: white;
        border: none;
        transition: transform 0.2s;
    }

        .btn-gradient-primary:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }
</style>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Major? Major { get; set; }

    public List<Department> Departments { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Major ??= await context.Majors.FirstOrDefaultAsync(m => m.Id == Id);
        Departments = await context.Departments.ToListAsync();

        if (Major is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateMajor()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Major!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!MajorExists(Major!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/majors");
    }

    private bool MajorExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Majors.Any(e => e.Id == id);
    }
}